#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_build:
	cargo build --release

override_dh_auto_install:
	install -Dm755 target/release/fluxara-avc debian/fluxara-avc/usr/bin/fluxara-avc
	install -Dm644 com.fluxara.AVC.desktop debian/fluxara-avc/usr/share/applications/com.fluxara.AVC.desktop
	install -Dm644 com.fluxara.AVC.svg debian/fluxara-avc/usr/share/icons/hicolor/scalable/apps/com.fluxara.AVC.svg

override_dh_auto_clean:
	cargo clean || true

override_dh_auto_test:
	# Skip tests for now
